@model ApplicationCore.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 20rem;">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div class="my-3">
                    <label>First Name</label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="my-3">
                    <label>Last Name</label>
                    <input type="text" asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="my-3">
                    <label>Date Of Birth</label>
                    <input type="date" asp-for="@Model.DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="my-3">
                    <label>Email</label>
                    <input type="email" asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="my-3">
                    <label>Password</label>
                    <input type="password" asp-for="@Model.HashedPassword" class="form-control" />
                    <span asp-validation-for="HashedPassword" class="text-danger"></span>
                </div>
                <div class="my-3">
                    <label>Confirm Password</label>
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="btn btn-dark">Create Account</button>
            </form>
        </div>
    </div>
</div>