@model IEnumerable<ApplicationCore.Entities.Movie>
@{
}
@{int rowNum = 0;}
<h1>Top purchased Movies</h1>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Total Purchases</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@(rowNum+=1)</td>
				<td>@item.Title</td>
				<td>@item.Purchases</td>
			</tr>
		}
	</tbody>
</table>